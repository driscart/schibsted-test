<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  	
  	<display-name>Technical Test</display-name>
  
  	<servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.schibsted.test.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Navigate</servlet-name>
        <servlet-class>com.schibsted.test.controller.NavigateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.schibsted.test.controller.LogoutServlet</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Navigate</servlet-name>
        <url-pattern>/navigate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
  
    <welcome-file-list>
    	<welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
  
</web-app>
